---
import type { SEOProps } from '../seo/types';
import SEO from '../components/shared/SEO.astro';
import Navigation from '../components/shared/Navigation.astro';
import Footer from '../components/shared/Footer.astro';

// Extend SEOProps to include required layout props
interface Props extends Omit<SEOProps, 'title' | 'description'> {
  title: string;  // Make title required
  description?: string;  // Optional with default
}

const { 
  title, 
  description = "Alexander Paul - Professional Consulting Services",
  ...seoProps
} = Astro.props;

// Define font families for better maintainability
const fontFamilies = [
  'Bebas+Neue',
  'Bona+Nova+SC:ital,wght@0,400;0,700;1,400',
  'Domine:wght@400..700',
  'Outfit:wght@100..900',
  'Oxanium:wght@200..800',
  'Radley:ital@0;1'
].join('&family=');

const googleFontsUrl = `https://fonts.googleapis.com/css2?family=${fontFamilies}&display=swap`;
---

<!DOCTYPE html>
<html lang="de" class="scroll-smooth">
<!-- 
👋👋👋 Thanks for visiting! 
Nope, this wasn't built using WordPress, Wix or PowerPoint. 
Just saving you some time 💐 I used AI to code all components for astro.js and did some manual refinements.
Let's have a coffee or kombucha to Chat about our next masterplan 🤓👉 https://calendly.com/hi-alexpaul/30min 
Cheers! Alex
-->
  <head>
    <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="generator" content={Astro.generator}>
    
    <SEO 
      title={title} 
      description={description}
      {...seoProps}
    />

    <!-- Enhanced Favicon Support -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#00a966">
    <meta name="theme-color" content="#ffffff">
    <meta name="msapplication-TileColor" content="#00a966">
    <link rel="manifest" href="/site.webmanifest">
    
    <!-- Optimized Google Fonts loading -->
    <link 
      href={googleFontsUrl}
      rel="stylesheet"
      media="print"
      data-media="all"
      onload="this.media=this.dataset.media;this.removeAttribute('data-media');"
    >
    <!-- Fallback for no-JS -->
    <noscript>
      <link
        href={googleFontsUrl}
        rel="stylesheet"
      >
    </noscript>
  </head>
  <body class="min-h-screen bg-gray-50 flex flex-col">
    <Navigation />
    <main class="pt-16 flex-grow">
      <slot />
    </main>
    <Footer />
  </body>
</html>
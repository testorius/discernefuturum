  }

  .service-card {
    transform: translateZ(0);
  }

  @keyframes float {
    0% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
    100% {
      transform: translateY(0px);
    }
  }
    /* Enhanced Breathing Effect for Logo */
  @keyframes breathing {
    0%, 100% {
      box-shadow: 0 0 30px 10px rgba(135, 221, 0, 0.2);
      transform: scale(1);
    }
    50% {
      box-shadow: 0 0 50px 15px rgba(135, 221, 0, 0.6);
      transform: scale(1.05);
    }
  }

  .breathing-effect {
    animation: breathing 10s ease-in-out infinite;
  }


</style>
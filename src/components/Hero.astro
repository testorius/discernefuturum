---
import { Image } from 'astro:assets';

interface Props {
  uptitle: string;
  title: string;
  subtitle: string;
  valueProps: string[];
  image: string;
}

const { uptitle, title, subtitle, valueProps, image } = Astro.props;
---

<section class="relative overflow-hidden bg-white py-20 sm:py-24 lg:py-28">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <!-- Header text center aligned -->
    <div class="text-center mb-16">
      <p class="text-base uppercase tracking-wide text-lime-600 lg:text-2xl mb-3">
        {uptitle}
      </p>
      <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl lg:text-6xl mb-4">
        {title}
      </h1>
      <p class="mx-auto max-w-2xl text-2xl text-gray-600">
        {subtitle}
      </p>
    </div>

    <!-- Two column grid with forced side-by-side layout -->
    <div class="flex flex-col lg:flex-row gap-12 lg:gap-16">
      <!-- Left column - Image -->
      <div class="w-full lg:w-1/2">
        <div class="aspect-[3/2] w-full overflow-hidden rounded-xl">
          <Image
            src={image}
            alt="Alexander Paul Profile"
            width={600}
            height={400}
            quality={85}
            format="webp"
            loading="eager"
            class="h-full w-full object-cover"
          />
        </div>
      </div>

      <!-- Right column - Value props -->
      <div class="w-full lg:w-1/2">
        <h2 class="text-2xl font-semibold text-gray-800 mb-6">
          Mein Profil für Ihren Erfolg:
        </h2>
        <div class="space-y-6 mb-8">
          {valueProps.map((prop) => (
            <div class="flex items-center group">
              <div class="flex-shrink-0">
                <svg 
                  class="h-6 w-6 text-lime-500 transform transition-transform duration-300 ease-out group-hover:scale-110" 
                  fill="none" 
                  viewBox="0 0 24 24" 
                  stroke-width="2" 
                  stroke="currentColor"
                >
                  <path 
                    stroke-linecap="round" 
                    stroke-linejoin="round" 
                    d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" 
                  />
                </svg>
              </div>
              <p class="ml-3 text-xl text-gray-700 group-hover:text-gray-900 transition-colors duration-200">
                {prop}
              </p>
            </div>
          ))}
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-col space-y-4">
          <a
            href="https://app.reclaim.ai/m/alexanderpaul/coffee"
            class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-white bg-lime-600 rounded-xl hover:bg-lime-500 transition-colors duration-200"
          >
            ☕ 15 Minuten Kaffee mit mir
          </a>
          <a
            href="https://linkedin.com/in/1xp"
            class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-blue-600 border-2 border-blue-600 rounded-xl hover:bg-blue-600 hover:text-white transition-colors duration-200"
          >
            Auf LinkedIn verbinden
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

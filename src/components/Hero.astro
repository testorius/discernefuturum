---
import { Image } from 'astro:assets';

interface Props {
  uptitle: string;
  title: string;
  subtitle: string;
  valueProps: string[];
  image: string;
}

const { uptitle, title, subtitle, valueProps, image } = Astro.props;

const HERO_IMAGE = {
  width: 600,
  height: 600,
  quality: 85
} as const;
---

<section class="relative overflow-hidden bg-white py-20 sm:py-24 lg:py-28">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <!-- Header text with improved contrast -->
    <div class="text-center mb-16">
      <p class="text-base uppercase tracking-wide text-lime-700 lg:text-2xl mb-3">
        {uptitle}
      </p>
      <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl lg:text-6xl mb-4">
        {title}
      </h1>
      <p class="mx-auto max-w-2xl text-2xl text-gray-700">
        {subtitle}
      </p>
    </div>

    <!-- Two column layout -->
    <div class="flex flex-col md:flex-row md:items-start md:justify-between">
      <!-- Left column - Image -->
      <div class="flex-1 md:max-w-[48%]">
        <div 
          class="w-full overflow-hidden rounded-xl" 
          style={`height: ${HERO_IMAGE.height}px;`}
        >
          <Image
            src={image}
            alt="Alexander Paul Profile"
            width={HERO_IMAGE.width}
            height={HERO_IMAGE.height}
            quality={HERO_IMAGE.quality}
            format="webp"
            loading="eager"
            class="w-full h-full object-cover"
          />
        </div>
      </div>

      <!-- Right column - Value props with improved contrast -->
      <div class="flex-1 md:max-w-[48%] mt-12 md:mt-0">
        <h2 class="text-2xl font-semibold text-gray-900 mb-6">
          Mein Profil für Ihren Erfolg:
        </h2>
        <div class="space-y-6 mb-8">
          {valueProps.map((prop) => (
            <div class="flex items-center group">
              <div class="flex-shrink-0">
                <svg 
                  class="h-6 w-6 text-lime-700 transform transition-transform duration-300 ease-out group-hover:scale-110" 
                  fill="none" 
                  viewBox="0 0 24 24" 
                  stroke-width="2" 
                  stroke="currentColor"
                >
                  <path 
                    stroke-linecap="round" 
                    stroke-linejoin="round" 
                    d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" 
                  />
                </svg>
              </div>
              <p class="ml-3 text-xl text-gray-700 group-hover:text-gray-900 transition-colors duration-200">
                {prop}
              </p>
            </div>
          ))}
        </div>

        <!-- CTA Buttons with improved contrast -->
        <div class="flex flex-col space-y-4">
          <a
            href="https://app.reclaim.ai/m/alexanderpaul/coffee"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-white bg-lime-700 rounded-xl hover:bg-lime-800 transition-colors duration-200"
          >
            ☕ 15 Minuten Kaffee mit mir
          </a>
          <a
            href="https://linkedin.com/in/1xp"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-blue-700 border-2 border-blue-700 rounded-xl hover:bg-blue-700 hover:text-white transition-colors duration-200"
          >
            Auf LinkedIn verbinden
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

